import java.util.Scanner;

// Topic 1: this keyword
class ThisKeywordExample {
    int id;
    String name;

    ThisKeywordExample(int id, String name) {
        this.id = id;    // 'this' refers to current object's variable
        this.name = name;
    }

    void display() {
        System.out.println("ID: " + id + ", Name: " + name);
    }
}

// Topic 2: Constructor
class ConstructorExample {
    String name;
    int age;

    ConstructorExample(String n, int a) {
        name = n;
        age = a;
    }

    void display() {
        System.out.println(name + " is " + age + " years old.");
    }
}

// Topic 3: Encapsulation
class Account {
    private double balance;  // private variable

    // Setter
    public void setBalance(double b) {
        if (b > 0)
            balance = b;
        else
            System.out.println("Invalid amount!");
    }

    // Getter
    public double getBalance() {
        return balance;
    }
}

// Topic 4: Copy Constructor
class CopyConstructorExample {
    int id;
    String name;

    // Parameterized Constructor
    CopyConstructorExample(int i, String n) {
        id = i;
        name = n;
    }

    // Copy Constructor
    CopyConstructorExample(CopyConstructorExample s) {
        id = s.id;
        name = s.name;
    }

    void display() {
        System.out.println("ID: " + id + ", Name: " + name);
    }
}

// Main Class
public class CoreJavaPractice {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("========== Core Java Practice ==========");
        System.out.println("1. this Keyword Example");
        System.out.println("2. Constructor Example");
        System.out.println("3. Encapsulation Example");
        System.out.println("4. Copy Constructor Example");
        System.out.println("========================================");
        System.out.print("Enter your choice (1-4): ");
        int choice = sc.nextInt();
        sc.nextLine(); // consume newline

        switch (choice) {
            case 1:
                System.out.println("\n--- this Keyword Example ---");
                System.out.print("Enter ID: ");
                int id1 = sc.nextInt();
                sc.nextLine();
                System.out.print("Enter Name: ");
                String name1 = sc.nextLine();
                ThisKeywordExample t = new ThisKeywordExample(id1, name1);
                t.display();
                break;

            case 2:
                System.out.println("\n--- Constructor Example ---");
                System.out.print("Enter Name: ");
                String name2 = sc.nextLine();
                System.out.print("Enter Age: ");
                int age = sc.nextInt();
                ConstructorExample c = new ConstructorExample(name2, age);
                c.display();
                break;

            case 3:
                System.out.println("\n--- Encapsulation Example ---");
                Account a = new Account();
                System.out.print("Enter amount to deposit: ");
                double amount = sc.nextDouble();
                a.setBalance(amount);
                System.out.println("Current Balance: " + a.getBalance());
                break;

            case 4:
                System.out.println("\n--- Copy Constructor Example ---");
                System.out.print("Enter ID: ");
                int id2 = sc.nextInt();
                sc.nextLine();
                System.out.print("Enter Name: ");
                String name3 = sc.nextLine();
                CopyConstructorExample s1 = new CopyConstructorExample(id2, name3);
                CopyConstructorExample s2 = new CopyConstructorExample(s1);
                System.out.println("\nOriginal Object:");
                s1.display();
                System.out.println("Copied Object:");
                s2.display();
                break;

            default:
                System.out.println("Invalid choice!");
        }

        sc.close();
    }
}

